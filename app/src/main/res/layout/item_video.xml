<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@color/rvColor"
    android:orientation="vertical"
    tools:context=".Video">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        tools:text="The PERFECT Beginner Workout (Sets and Reps Included)"
        android:textColor="@color/text"/>


    <WebView
        android:id="@+id/ytVideo"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/text"
        android:textSize="16sp"
        tools:text="Easy" />

    <TextView
        android:id="@+id/tvMuscleType"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="306dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/tvDummy2"
        android:textColor="@color/text"
        android:textSize="16sp"
        tools:text="Chest" />

    <TextView
        android:id="@+id/tvDummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/tvDifficulty"
        android:text="Difficulty:"
        android:textColor="@color/text"
        android:textSize="16sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:background="@color/text" />

    <TextView
        android:id="@+id/tvDummy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="40dp"
        android:text="Muscle:"
        android:textColor="#000000"
        android:textSize="16sp" />


</RelativeLayout>