<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/rvColor">

    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btStartPause"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="161dp"
        android:layout_marginTop="331dp"
        android:background="@drawable/btn_timer"
        android:text="Start"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btReset"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="399dp"
        android:background="@drawable/btn_timer"
        android:text="Reset"
        android:textColor="@color/white"
        android:visibility="invisible"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlus5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_timer"
        android:text="+5 Min"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlus1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_timer"
        android:text="+1 Min"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btMinus5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/btn_timer"
        android:text="-5 Min"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btMinus1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_timer"
        android:text="-1 Min"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btPlus30"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/btn_timer"
        android:text="+30 Min"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btMinus30"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tvCountdown"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/btn_timer"
        android:text="-30 Min"
        android:textColor="@color/white" />

</RelativeLayout>